<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativ_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D4D9DC">

    <LinearLayout
        android:id="@+id/linear_rv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/card_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/afl_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:src="@drawable/air_conditioner"
                android:visibility="gone" />

            <TextView
                android:id="@+id/afl_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/movie_poster_card"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="11dp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

